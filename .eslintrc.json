{
  "root": true,
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "semi": ["error", "never"],
    "object-curly-spacing": ["error", "always"],
    "array-bracket-spacing": ["error", "always"],
    "arrow-parens": ["error", "as-needed"],
    "comma-spacing": ["error", {
      "before": false,
      "after": true
    }],
    "comma-dangle": ["error", "never"]
  }
}
